<Window x:Class="MessengerApp.MVVM.View.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessengerApp.MVVM.View"
        mc:Ignorable="d"
        Title="Error" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Background="White" CornerRadius="10">
            <StackPanel Margin="20">
                <TextBlock Text="Error" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
                <TextBlock x:Name="ErrorMessage" TextWrapping="Wrap" Margin="0,15,0,0"/>
                <Button Content="OK" Width="80" HorizontalAlignment="Center" Margin="0,20,0,0" Click="Button_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
