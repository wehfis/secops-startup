<Window x:Class="MessengerApp.MVVM.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Login" Height="1080" Width="1920" WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown">
    <Border>
        <Border.Background>
            <ImageBrush ImageSource="../../Images/Background.jpg"/>
        </Border.Background>
        <Grid>
            <StackPanel Width="550" Height="400" Background="#EDFDFA">
                <Canvas Width="550" Height="60" Background="#005E63" Panel.ZIndex="2" Canvas.Top="0"/>
                <TextBlock>
                    Login
                </TextBlock>
            </StackPanel>
        </Grid>
    </Border>
</Window>
