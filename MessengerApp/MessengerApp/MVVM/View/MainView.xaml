<Window x:Class="MessengerApp.MVVM.View.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessengerApp.MVVM.View"
        mc:Ignorable="d"
        Title="MainView" Height="900" Width="1500"
        WindowStartupLocation="CenterScreen"
        FontFamily="Montserat"
        FontWeight="SemiBold">
    <Window.Resources>
        <!-- Define a DataTemplate as a resource -->
        <DataTemplate x:Key="CustomItemTemplate">
            <Border BorderBrush="Gray" BorderThickness="1" Margin="5">
                <StackPanel>
                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
                    <Slider Value="{Binding SliderValue}" Minimum="0" Maximum="100" Width="150"/>
                </StackPanel>
            </Border>
        </DataTemplate>
    </Window.Resources>
    <Border>
        <Border.Background>
            <ImageBrush ImageSource="../../Images/Background.jpg" Stretch="None"/>
        </Border.Background>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="500"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Left menu content -->
            <Grid Background="#005E63" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition  Height="200"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Height="150" Width="150">
                        <Border.Background>
                            <ImageBrush Stretch="Fill" ImageSource="../../Images/Profile_skeletone.png"/>
                        </Border.Background>
                    </Border>
                    
                    <TextBlock FontSize="32" Foreground="#EDFDFA" Grid.Row="0" Grid.Column="1" Margin="5 20 0 0">
                            Dimass
                    </TextBlock>
                    
                    <TextBlock FontSize="16" Foreground="#EDFDFA" Grid.Row="0" Grid.Column="1" Margin="5 55  0 0">
                            dimasik2004@gmail.com
                    </TextBlock>
                </Grid>


                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button FontSize="24 " Foreground="#005E63" Grid.Column="0">
                        Settings
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#26AFB6"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="150" Height="38" BorderThickness="2" BorderBrush="#EDFDFA" CornerRadius="9" Background="#EDFDFA">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button FontSize="24" Foreground="#EDFDFA" Grid.Column="1">
                        Log out
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#26AFB6"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="150" Height="38" BorderThickness="2" BorderBrush="#EDFDFA" CornerRadius="9">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>


                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button FontSize="24 " Foreground="#EDFDFA" Grid.Column="0">
                        Contacts
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#26AFB6"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border BorderThickness="2" BorderBrush="#EDFDFA" Background="Transparent">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button FontSize="24" Foreground="#005E63" Grid.Column="1">
                        Groups
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#26AFB6"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border BorderBrush="#EDFDFA" BorderThickness="2" Background="#EDFDFA">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
                <ListBox Name="dynamicListBox" Grid.Row="3" Background="#005E63" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.Resources>
                            <Style TargetType="ScrollBar">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                            </Style>
                        </ListBox.Resources>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="-1"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="White" BorderThickness="0,2,0,2" Height="100" Width="495">
                                <!-- Customize the content of each ListBox item here -->
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="../../Images/Profile_skeletone.png" Width="80" Height="80" Margin="5"/>
                                    <StackPanel Margin="10 20 0 0 ">
                                        <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Bold" Foreground="#EDFDFA"/>
                                        <TextBlock Margin="0 10 0 0" FontSize="14" Text="{Binding Description}" TextWrapping="Wrap" Foreground="#EDFDFA"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>

            <!-- Rigt area content -->
            <Border Grid.Column="1" Width="555.3" Height="84.73" Background="#005E63" CornerRadius="50">
                <TextBlock FontSize="44" Foreground="#EDFDFA" TextAlignment="Center" VerticalAlignment="Center">
                            No chat is picked
                </TextBlock>
            </Border>
        </Grid>
    </Border>
</Window>
